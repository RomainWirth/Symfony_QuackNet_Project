{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="w-full h-full flex flex-col justify-evenly items-center">
    <div>
        <h1>Feed</h1>
        <div>
            <a href="{{ path('quackquack_add') }}">New Quack</a>
        </div>
    </div>
    <div>
        {% for quack in quacks %}
            <div>
                <article class="quack">
                    <p class="quack-author">{{ quack.user_id.firstname }}</p>
                    <p class="quack-content">{{ quack.content }}</p>
                    <img src="{{ quack.picture }}"/>
                    <p>{{ quack.tags }}</p>
                    <span class="quack-date">Published on {{ quack.getCreatedAt | date('Y-m-d H:i:s') }}</span>
                </article>
            </div>
        {% else %}
            <p>Aucun quack</p>
        {% endfor %}
    </div>
</div>
{% endblock %}
