{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block stylesheets %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
{% endblock %}

{% block javascripts %}
{% endblock %}

{% block body %}
<main class="example-wrapper">
    <h1>Feed</h1>
    <div>
        <a href="{{ path('quackquack_add') }}">New Quack</a>
    </div>
    <div>
        {% for quack in quacks %}
            <a href="">
                <article class="quack">
                    <p class="quack-content">{{ quack.content }}</p>
                    {#<p class="quack-author">{{ quack.user_id }}</p>#}
                    <span class="quack-date">Publi√© le {{ quack.getCreatedAt | date('Y-m-d H:i:s') }}</span>
                </article>
            </a>
        {% else %}
            <p>Aucun quack</p>
        {% endfor %}
    </div>
</main>
{% endblock %}
